{% extends 'base.html.twig' %}

{% block title %}Get a quote!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="wrapper">
            <div class="row text-center">
                <div class="col-6">
                    <h3>PURCHASE FOREIGN CURRENCY</h3>
                    {{ form_start(form, {'id': 'get_quote'}) }}
                    <div class="form-group">
                        {{ form_row(form.amount) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.currency) }}
                    </div>

                    <input type="submit" class="btn btn-dark" value="Get a quote"/>
                    {{ form_end(form) }}
                </div>
                <div class="col-6">
                    results
                </div>
            </div>
        </div>
    </div>
{% endblock %}
