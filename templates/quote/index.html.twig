{% extends 'base.html.twig' %}

{% block title %}Get a quote!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <nav class="navbar navbar-light bg-light justify-content-between">
        <a href="http://localhost:8001/api" class="navbar-brand" target="_blank">API</a>
        <a href="{{ path('app_logout') }}"><button class="form-inline btn btn-dark">Log out</button></a>
    </nav>
    <div class="container">
        <div class="wrapper">
            <div class="row text-center">
                <div class="col-6">
                    <h3>PURCHASE FOREIGN CURRENCY</h3>
                    <div id="form">
                        {{ form_start(form, {'attr': {'id': 'get_quote'}}) }}
                        <div class="form-group">
                            {{ form_row(form.amount) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.currency) }}
                        </div>

                        <input type="submit" class="btn btn-dark" value="Get a quote"/>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="col-6">
                    <div id="quote">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/components/order.js') }}"></script>
    {{ encore_entry_script_tags('components/order') }}
{% endblock %}
